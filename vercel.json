{
  "version": 2,
  "name": "opsqueries",
  "buildCommand": "npm run build",
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "BUILDING": "true",
      "NODE_OPTIONS": "--max-old-space-size=1024 --no-warnings"
    }
  },
  "functions": {
    "app/api/**/*.js": {
      "maxDuration": 30,
      "memory": 512
    },
    "app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 512
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=0, stale-while-revalidate"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS, PATCH"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}